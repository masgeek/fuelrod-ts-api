{
  "name": "fuelrod-api",
  "version": "1.0.0",
  "description": "Fuelrod REST api",
  "type": "commonjs",
  "main": "index.ts",
  "author": "Sammy M <barsamms@gmail.com>",
  "repository": "git@github.com:masgeek/fuelrod-ts-api.git",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.9.0",
    "body-parser": "^1.19.1",
    "express": "^4.18.2",
    "sms-counter": "^1.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": ">=5.43.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^32.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^2.0.20",
    "prisma": "^4.9.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --fix --ext .ts",
    "dev": "ts-node-dev --inspect --respawn --transpile-only --exit-child --watch src src/index.ts",
    "dev:server": "nodemon --watch './**/*.ts' --exec ts-node src/index.ts",
    "stop": "lsof -ti :3000 | xargs kill",
    "update-db": "prisma generate",
    "view-db": "prisma studio"
  },
  "prisma-old": {
    "schema": "prisma/fuelrod.prisma"
  }
}
