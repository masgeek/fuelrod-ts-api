{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
    ],
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "dist",
    "prisma",
    "tests"
  ]
}